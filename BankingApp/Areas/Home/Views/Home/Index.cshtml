@model List<BankingApp.Areas.Home.Models.BankAccountViewModel>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

<div class="justify-content-center">
    <form id="quick-transfer-form" action="@Url.Action("Transfer", "Home" )" method="post">
        @Html.AntiForgeryToken()
        <div class="quick-transfer-container">
            <h4 class="text-center">Quick Transfer</h4>

            <!-- Quick Transfer Fields -->
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fa fa-fw fa-gbp"></i></span>
                    </div>
                    <input class="form-control" placeholder="Amount to transfer" type="number" step="0.01" min="1" max="10000" id="AmountToTransfer" name="AmountToTransfer" />
                </div>
            </div>
            <div class="form-group">
                <select disabled class="form-control select-required" id="SenderID" name="SenderID">
                    <option value="" selected>Transfer from</option>
                    @foreach (var bankAccount in Model)
                    {
                        <option value="@bankAccount.BankAccountID">@bankAccount.AccountName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <select disabled class="form-control select-required" id="RecipientID" name="RecipientID">
                    <option value="" selected>Transfer to</option>
                    @foreach (var bankAccount in Model)
                    {
                        <option value="@bankAccount.BankAccountID">@bankAccount.AccountName</option>
                    }
                </select>
            </div>
            <input class="btn btn-primary btn-block" type="submit" value="Transfer" />

            <!-- Quick Transfer Success/Failure Messages -->
            <div class="text-center">
                <div id="transfer-success-message" hidden>
                    <hr />
                    <label class="text-success">Transaction Successful</label>
                </div>
                <div id="transfer-failure-message" hidden>
                    <hr />
                    <label class="text-danger">Transaction Failed</label>
                </div>
            </div>
        </div>
    </form>

    @foreach (var bankAccount in Model)
    {
        <div class="bank-account-container mt-2">
            <div class="bank-account-top">
                <div class="mb-4">
                    <small class="float-left">@bankAccount.BankAccountID - @bankAccount.AccountName</small>
                    <small class="float-right">@bankAccount.AccountType</small>
                </div>

                @if (bankAccount.Balance > 0)
                {
                    <h4 class="text-success">£@bankAccount.Balance</h4>
                }
                else if (bankAccount.Balance < 0)
                {
                    <h4 class="text-danger">£@bankAccount.Balance</h4>
                }
                else if (bankAccount.Balance == 0)
                {
                    <h4>£@bankAccount.Balance</h4>
                }
            </div>

            <div class="bank-account-bottom text-white">
                <h4>MORE STUFF HERE</h4>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/home.js" asp-append-version="true"></script>
}
